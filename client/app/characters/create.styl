.char-create
  .cc-race, .cc-gender
    margin 4px 0 0 0
    background lighten(color-blue, 10)
    padding 5px
    border 4px solid lighten(color-blue, 10)
    cursor pointer
    &.selected
      border 4px dotted lighten(color-gold, 10)
      cursor default
  .cc-race:not(:first-child)
    margin 10px 0 0 0
  .cc-gender
    margin 4px
  .scrollable
    height 500px
    overflow-x hidden
    overflow-y scroll
    padding 0 4px
  .cc-description
    position absolute
    top 20px
    right 20px
    height 100%
    width 250px
    background darken(color-blue, 20)
    padding 10px

.previous-arrow, .next-arrow
  height 32px
  margin 10px 4px
  width 32px
  cursor pointer
  &:hover
    opacity 0.8

.previous-arrow
  float left
  background url('/assets/images/arrows.png') 0 0 no-repeat
.next-arrow
  float left
  background url('/assets/images/arrows.png') -32px 0 no-repeat

.step-text
  cursor pointer
  color darken(white, 10)
  float left
  margin-top 12px
  font-size 2rem
  &:hover
    color darken(white, 20)
