.overlay
  .miri-panel.max
    .row.text-center
      .col-sm-4
      .col-sm-4
        h1 Select Character
    .row
      .col-sm-4(ng-repeat='n in characters track by $index')
        .character-box(ng-switch='n')
          span(ng-switch-when='undefined')
            h4 Empty
            a.btn.play-btn.btn-primary.btn-lg(ui-sref='main.characterCreate') Create
          span(ng-switch-default='')
            a.pull-right.red(ng-click='deleteCharacter(n.id)', href="#") X
            h4 {{ n.name }}
            trait(trait-icon='n')
            p A quick little blurb about the character maybe.
            br
            | Current Location
            a.btn.play-btn.btn-primary.btn-lg(ng-click='select_character(n.id)') Play
