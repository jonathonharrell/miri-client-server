.overlay.miri.container-fluid
  .container.panel.centered
    .row
      .col-sm-4
      .col-sm-4
        h1 Sign up
        hr
      .col-sm-4
    .row
      .col-sm-4
      .col-sm-4
        form.form(name='form', ng-submit='register(form)', novalidate='')
          .form-group(ng-class='{ "has-success": errors.email.length <= 0 && submitted,\
          "has-error": errors.email.length > 0 && submitted }')
            label Email
            input.form-control(type='email', name='email', ng-model='user.email', required='', placeholder='ex. me@awesome.com')
            span(ng-show='errors.email.length > 0 && submitted')
              p.help-block(ng-repeat='err in errors.email') {{err}}
          .form-group(ng-class='{ "has-success": errors.password.length <= 0 && submitted, "has-error": errors.password.length > 0 && submitted }')
            label Password
            .row
              .col-sm-7
                input.form-control(type='password', name='password', ng-model='user.password', required='', ng-show="!showPassword", placeholder='ex. aw3som3P@ss')
                input.form-control(type='text', ng-model='user.password', ng-show="showPassword")
              .col-sm-5
                div(password-strength="user.password || ''")
            span(ng-show='errors.password.length > 0 && submitted')
              p.help-block(ng-repeat='err in errors.password') {{err}}

          .checkbox
            label(for="showPassword")
              input#showPassword(type="checkbox", ng-model="showPassword")
              | Show Password

          hr
          div
            button.btn.btn-primary.btn-lg.btn-login(type='submit')
              | Sign up
            = ' '
            a.btn.btn-default.btn-lg.btn-register(ui-sref='main.login')
              | Login
