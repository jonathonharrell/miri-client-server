.overlay.miri.container-fluid
  .container.panel.centered
    .row
      .col-sm-4
      .col-sm-4
        h1 Login
        hr
    .row
      .col-sm-4
      .col-sm-4
        form.form(name='form', ng-submit='login(form)', novalidate='')
          .form-group(ng-class='{ "has-success": (form.email.$valid && errors.length <= 0) && submitted,\
          "has-error": (form.email.$error.email || form.email.$error.required || errors.length > 0) && submitted }')
            label Email
            input.form-control(type='email', name='email', ng-model='user.email', required=true)
          .form-group(ng-class='{ "has-success": (form.password.$valid && errors.length <= 0) && submitted,\
          "has-error": (form.password.$error.required || errors.length > 0) && submitted }')
            label Password
            input.form-control(type='password', name='password', ng-model='user.password', required=true)

          .form-group.has-error
            p.help-block(ng-repeat='err in errors') {{err}}

          p
            a(ui-sref='main.forgot_password') Forgot your password?

          hr
          div
            button.btn.btn-primary.btn-lg.btn-login(type='submit')
              | Login
            = ' '
            a.btn.btn-default.btn-lg.btn-register(ui-sref='main.signup')
              | Register
