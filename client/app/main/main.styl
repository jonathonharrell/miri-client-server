html, body, .play-view
  height 100%
  background darken(color-blue, 10)

h1
  font-family 'IM Fell English SC', serif

.has-error .help-block, .has-error .control-label, .has-error .radio, .has-error .checkbox, .has-error .radio-inline, .has-error .checkbox-inline
  color color-red

.play-view
  min-width 1200px

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display none !important

input, .btn, button, .form-control,
.progress, .label
  border-radius(0)

.btn-primary
  background lighten(color-blue, 20)
  border 1px solid lighten(color-blue, 20)
  &:hover
    border 1px solid lighten(color-blue, 10)
    background lighten(color-blue, 10)

.btn-default
  background color-smoke
  border 1px solid color-smoke
  &:hover
    border 1px solid darken(color-smoke, 10)
    background darken(color-smoke, 10)

.miri-panel
  background color-jet
  color color-gainsboro
  margin 1em
  border-style solid
  border-width 16px
  -moz-border-image url(/assets/images/border.png) 16 repeat
  -webkit-border-image url(/assets/images/border.png) 16 repeat
  -o-border-image url(/assets/images/border.png) 16 repeat
  border-image url(/assets/images/border.png) 16 fill repeat
  border-image-outset 6px
  border-radius(0)
  a:not(.btn)
    color lighten(color-blue, 25)
    &:hover, &:active
      text-decoration none
      color lighten(color-blue, 15)
    &.red
      color color-red
      &:hover, &:active
        text-decoration none
        color darken(color-red, 10)
  hr
    border-top 1px solid color-iron

.cursive
  font-family 'Tangerine', cursive

.overlay
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  background rgba(0, 0, 0, 0.4)
  display flex
  justify-content center
  align-items center
  resize both
  z-index 2
  .miri-panel
    padding 0
    height auto
    min-width 700px
    width 50%
    border-style solid
    border-width 32px
    -moz-border-image url(/assets/images/border-thick.png) 32 repeat
    -webkit-border-image url(/assets/images/border-thick.png) 32 repeat
    -o-border-image url(/assets/images/border-thick.png) 32 repeat
    border-image url(/assets/images/border-thick.png) 32 fill repeat
    border-image-outset 6px
    border-radius(0)
    &.max
      width 90%
    .inner-panel
      width 75%
      margin 0 auto

.status-effects-box, .location-box, .action-box, .weather-box, .entities-box, .overlay,
.hotkeys-box, .movement-box, .chat-box, .admin-command-box
  position absolute

.status-effects-box
  width 5%
  height 85%
  left 5px
  top 0

.location-box
  width 70%
  height 25%
  left 7%
  top 0

.action-box
  width 70%
  height 45%
  left 7%
  top 27%

.weather-box
  width 19%
  height 20%
  right 5px
  top 0

.entities-box
  width 19%
  height 50%
  right 5px
  top 22%

.movement-box
  right 5px
  width 19%
  top 74%
  height 20%

.chat-box
  width 33%
  top 74%
  height 10%
  left 7%

.hotkeys-box
  top 74%
  width 35%
  height 15%
  left 42%

.admin-command-box
  bottom 0
  height 10%
  width 50%
  left 25%
  z-index 200
  input[name=command]
    width 25% !important
  input[name=args]
    width 75% !important

.logo
  background url(/assets/images/logo.png)
  height 80px
  width 280px
  position absolute
  bottom 0
  left -20px

.settings-button
  position absolute
  bottom 20px
  left 220px

.message-container
  overflow-y scroll
  overflow-x auto
  &::-webkit-scrollbar
    display none

.character-box
  text-align center
  background url(/assets/images/scroll.png) center no-repeat
  color color-tuatara
  min-height 400px
  padding: 32px
  max-width 350px
  margin 0 auto

  .play-btn
    position absolute
    bottom 20px
    width 34%
    left 33%
    font-size 4rem
    font-weight bold
    color color-brown !important
    &:hover, &:active
      color darken(color-brown, 10) !important

.rad, .ckb
  cursor pointer
  user-select none
  -webkit-user-select none
  -webkit-touch-callout none

.rad > input, .ckb > input
  visibility hidden
  position absolute

.rad > .img, .ckb > .img
  border 4px solid color-gainsboro

.rad:hover > .img
  border 4px solid color-iron

.rad > input:checked + .img
  border 4px solid lighten(color-blue, 40)

.rad > input:not(:checked) + .img, .ckb > input:not(:checked) + .img
  opacity 0.5

.modal-dialog
  overflow-y initial !important

.modal-body-scrollable
  height 400px
  overflow-y auto

.modal-content
  background transparent

.close
  color color-white
  text-shadow 0 1px 0 color-gainsboro
  opacity 0.5
  &:hover, &:active
    color color-smoke

.back-arrow
  font-size 2.5rem
  float left
