html, body, .miri
  height 100%
  background darken(color-purple, 25)

input, .btn, button, .form-control,
.progress, .label
  border-radius(0)

.btn-primary
  background lighten(color-blue, 20)
  border 1px solid lighten(color-blue, 20)
  &:hover
    border 1px solid lighten(color-blue, 10)
    background lighten(color-blue, 10)

.miri-panel
  background darken(color-blue, 10)
  margin 1em
  color color-iron
  border 2px solid lighten(color-gold, 10)
  height 90%
  padding 1em
  border-radius(0)
  a:not(.btn)
    color lighten(color-blue, 25)
    &:hover, &:active
      text-decoration none
      color lighten(color-blue, 20)

.overlay
  position absolute
  top 0
  left 0
  width 100%
  overflow hidden
  background rgba(0, 0, 0, 0.4)
  display flex
  justify-content center
  align-items center
  resize both
  z-index 2

.border
  border 1px solid rgba(0, 0, 0, 0.1)

section.main, div.main
  height 90%

  .message-container
    overflow-y scroll
    overflow-x auto
    background color-monsoon
    height 50%
    &::-webkit-scrollbar
      display none

.bottom
  height 10%

.section-a
  height 30%
.section-b
  height 60%

footer
  position fixed
  bottom -10px
  background color-monsoon
  width 50%
  left 25%
  padding 1em
  a
    color darken(color-blue, 15)
    &:hover, &:active
      color darken(color-blue, 10)
