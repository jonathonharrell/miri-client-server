html, body, .miri
  height 100%
  background darken(color-purple, 25)

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display none !important

input, .btn, button, .form-control,
.progress, .label
  border-radius(0)

.btn-primary
  background lighten(color-blue, 20)
  border 1px solid lighten(color-blue, 20)
  &:hover
    border 1px solid lighten(color-blue, 10)
    background lighten(color-blue, 10)

.miri-panel
  font-family Pexico-Regular
  background darken(color-blue, 10)
  margin 1em
  color color-iron
  border-style solid
  border-width 23px 27px 23px 23px
  -moz-border-image url(/assets/images/border.png) 23 27 23 23 repeat
  -webkit-border-image url(/assets/images/border.png) 23 27 23 23 repeat
  -o-border-image url(/assets/images/border.png) 23 27 23 23 repeat
  border-image url(/assets/images/border.png) 23 27 23 23 fill repeat
  border-image-outset 12px
  height 90%
  padding 1em
  border-radius(0)
  a:not(.btn)
    color lighten(color-blue, 25)
    &:hover, &:active
      text-decoration none
      color lighten(color-blue, 20)
  hr
    border-top 1px solid color-iron

.overlay
  position absolute
  top 0
  left 0
  width 100%
  overflow hidden
  background rgba(0, 0, 0, 0.4)
  display flex
  justify-content center
  align-items center
  resize both
  z-index 2
  .miri-panel
    height: auto

.border
  border 1px solid rgba(0, 0, 0, 0.1)

section.main, div.main
  height 90%

  .message-container
    overflow-y scroll
    overflow-x auto
    background color-monsoon
    height 50%
    &::-webkit-scrollbar
      display none

.bottom
  height 10%

.section-a
  height 30%
.section-b
  height 60%

.character-box
  text-align center
  // background color-smoke
  background url(/assets/images/scroll.png) center no-repeat
  color color-tuatara
  min-height 400px
  padding: 32px 20px

  .play-btn
    position absolute
    bottom 20px
    width 34%
    left 33%

trait
  width 32px
  height 32px
  display inline-block
  border 4px solid color-gainsboro
  padding 16px
  &:hover
    border 4px solid color-iron

footer
  position fixed
  bottom -10px
  background color-monsoon
  width 50%
  left 25%
  padding 1em
  a
    color darken(color-blue, 15)
    &:hover, &:active
      color darken(color-blue, 10)
