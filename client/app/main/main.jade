section.container-fluid.miri
  section.row.main
    .col-xs-1.miri
      .miri-panel
        h5 Status Effects
    .col-xs-8.miri
      .miri-panel
        h5 Main window
        .message-container(message-box="msgs")
          .row(ng-repeat="m in msgs")
            .col-xs-12.message {{m.data}}
    .col-xs-3.miri
      .row.section-a
        .col-xs-12.miri
          .miri-panel
            h5 Weather and other location details
      .row.section-b
        .col-xs-12.miri
          .miri-panel
            h5 Interactable entities
  section.row.bottom
    .col-xs-9
      .row
        .col-xs-6
          .miri-panel
            form(role="form", ng-submit="sendCommand()")
              input.form-control.command-box(ng-model="cmd", input-type="text", placeholder="Enter a command...", ng-disabled="{{commandBoxDisabled}}")
        .col-xs-6
          .miri-panel
            h5 Hotkeys
    .col-xs-3
      .miri-panel
        h5 Movement controls

.ui-view
