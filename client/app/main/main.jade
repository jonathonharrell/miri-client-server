.status-effects-box.miri-panel.text-center
  p Status Effects
  status-effect(icon='-1')
  
.location-box.miri-panel
  h5 Location Messages

.action-box.miri-panel
  h5 Action Messages
  .message-container(message-box="msgs")
    .row(ng-repeat="m in msgs")
      .col-xs-12.message {{m.data}}
      
.weather-box.miri-panel
  h5 Weather and other location details
  
.entities-box.miri-panel
  h5 Interactable entities
  
.chat-box.miri-panel
  form(role="form", ng-submit="sendDialogCommand()", ng-init="dialog.command = 'say'")
    .input-group
      .input-group-btn(dropdown="", is-open="dialogSelectOpen", ng-init="dialogSelectOpen = false")
        button#dialog-select.btn.btn-default(dropdown-toggle="", type="button")
          | {{dialog.command.charAt(0).toUpperCase() + dialog.command.slice(1)}} 
          span.caret
        ul.dropdown-menu(role="menu", aria-labelled-by="dialog-select")
          li(role="menuitem")
            a(ng-click="dialog.command = 'say'") Say
          li(role="menuitem")
            a(ng-click="dialog.command = 'yell'") Yell
      input.form-control.command-box(type='text', name="dialogInput", ng-model="dialog.args.input", placeholder="...", ng-disabled="{{commandBoxDisabled}}")
      .input-group-btn
        button.btn.btn-default Emotes
        
.hotkeys-box.miri-panel
  h5 Hotkeys
  
.movement-box.text-center.miri-panel
  h5(style='color:#e9e9e9') Movement controls

.admin-command-box.miri-panel(ng-show="auth.admin")
  form
  .input-group
    input.form-control(type='text', name='command', ng-model='admin_form.command', placeholder='command')  
    input.form-control(type='text', name='args', ng-model="admin_form.args", placeholder="args as json")
    .input-group-btn
      button.btn.btn-default(ng-click='sendCommand()') Send

a(ui-sref='main')
  span.logo
.ui-view
