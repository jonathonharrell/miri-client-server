section.container-fluid.miri
  section.row.main
    .col-xs-1.miri
      .miri-panel
        h5 Status Effects
    .col-xs-8.miri
      .miri-panel
        h5 Main window
        .row(ng-repeat="data in messages track by $index").message-container
          .col-xs-12.message(ng-class="data.type")
            .row
              .col-xs-1
                i(ng-class="data.icon", class="fa")
              .col-xs-11
                span(compile="data.msg | messageParser")
    .col-xs-3.miri
      .row.section-a
        .col-xs-12.miri
          .miri-panel
            h5 Weather and other location details
      .row.section-b
        .col-xs-12.miri
          .miri-panel
            h5 Interactable entities
  section.row.bottom
    .col-xs-9
      .row
        .col-xs-6
          .miri-panel
            form(role="form", ng-submit="sendCommand()")
              input.form-control.command-box(ng-model="cmd", input-type="commandBoxType", placeholder="Enter a command...", ng-disabled="{{commandBoxDisabled}}")
        .col-xs-6
          .miri-panel
            h5 Hotkeys
    .col-xs-3
      .miri-panel
        h5 Movement controls

.ui-view
